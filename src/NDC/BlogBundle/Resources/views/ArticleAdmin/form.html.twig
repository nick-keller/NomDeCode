
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
{{ form_start(form) }}
    {{ form_widget(form) }}

<div class="row">
    <div class="col-sm-10 col-sm-offset-2">
        <div class="btn-group">
            {% if article.id is not null %}
                <button class="btn btn-default" data-type="ajax">
                    <i class="glyphicon glyphicon-floppy-disk"></i>
                    Enregistrer
                </button>
            {% endif %}
            <button class="btn btn-default" type="submit">
                Enregistrer et quitter
            </button>
            {% if article.id is not null %}
                <a class="btn btn-default" href="{{ path('blog_article', {id:article.id, category: article.category.slug, slug:article.slug}) }}" target="_blank">
                    <i class="glyphicon glyphicon-eye-open"></i>
                    Visionner
                </a>
            {% endif %}
        </div>
    </div>
</div>
{{ form_end(form) }}