{% extends 'NDCBlogBundle:ArticleAdmin:layout.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    {{ helper.breadcrumb(null, article) }}
    {{ helper.breadcrumb(null, 'Editer') }}
{% endblock %}

{% block body %}
    <h1>Editer un article</h1>

    {% include '@NDCBlog/ArticleAdmin/form.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(window).on('beforeunload', function(e){
            return "Voulez vous vraiment quitter la page ?";
        });
        $('form').submit(function(){
            $(window).unbind('beforeunload');
        });
    </script>
{% endblock %}