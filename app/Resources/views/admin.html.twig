<!DOCTYPE html>

{% macro navbar(text, base, route) %}
<li {%- if(base in app.request.get('_route')) %} class="active"{% endif -%} >
    <a href="{{ path(base ~ '_' ~ route) }}">
        {{ text }}
    </a>
</li>
{% endmacro %}

{% macro search(target, method = 'get', name = 'query') %}
    <form action="{{ path(target) }}" method="{{ method }}">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Rechercher..." name="{{ name }}">
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </form>
{% endmacro %}

{% macro action(target, icon, text) %}
    <li>
        <a href="{{ path(target) }}">
            <span class="glyphicon glyphicon-{{ icon }}"></span>
            {{ text }}
        </a>
    </li>
{% endmacro %}

{% macro breadcrumb(target, text) %}
    <li>
        <a href="{{ path(target) }}">
            {{ text|raw }}
        </a>
    </li>
{% endmacro %}

{% import _self as helper %}

